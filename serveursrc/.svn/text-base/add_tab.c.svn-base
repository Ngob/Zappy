#include	"zappy.h"

void	add_tab(int *tab, int fd)
{
  int		i;

  i = 0;
  while (tab[i] != -1)
    ++i;
  if (i < BUFF_SIZE)
    tab[i] = fd;
}

void	add_tab_drone(int *tab, int fd)
{
  int		i;

  i = 0;
  while (tab[i] != -1)
    ++i;
    tab[i] = fd;
}
