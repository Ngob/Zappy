void		Client::player_broadcast(std::vector<std::string> cmd)
{
  std::string			msg;

  if (cmd.size() >= 3)
    {
      msg = "Player " + cmd[1] + " is broadcasting ";
      this->Win->aff_msg(msg);
    }
}
